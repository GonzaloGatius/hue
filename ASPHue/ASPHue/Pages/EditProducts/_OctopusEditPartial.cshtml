@using libraryhue.Models.Products;
@model ASPHue.Pages.EditProdcuts.EditProductsModel

@if (Model == null)
{
    <h2>Artículo no encontrado.</h2>
}
else
{
    <form method="post">
        <div class="form-group">
            <label class="control-label"><strong>Equipo</strong></label>
            <h4><input asp-for="@Model.OctopusModel.Model" class="form-control" /></h4>
            <span asp-validation-for="@Model.OctopusModel.Model" class="text-danger"></span>
        </div>
        <table class="table">
            <thead>
            <th type="hidden"></th>
            <th type="hidden"></th>
            <th type="hidden"></th>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="form-group">
                            @*Id*@
                            <p><strong>Id:</strong> @Model.Id</p>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @*Adquirido*@
                            <label class="control-label"><strong>Adquirido</strong></label>
                            <input type="date" asp-for="@Model.OctopusModel.Acquired" />
                            <span asp-validation-for="@Model.OctopusModel.Acquired" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @*Serial Number*@
                            <label class="control-label"><strong>No. Serie</strong></label>
                            <input asp-for="@Model.OctopusModel.SerialNumber" class="form-control" maxlength="99"></input>
                            <span asp-validation-for="@Model.OctopusModel.SerialNumber" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            @*Interno*@
                            <label class="control-label"><strong>No. Interno</strong></label>
                            <input asp-for="@Model.OctopusModel.InternNumber" class="form-control" />
                            <span asp-validation-for="@Model.OctopusModel.InternNumber" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @*Estado*@
                            <label class="control-label"><strong>Estado</strong></label>
                            <select asp-for="@Model.OctopusModel.StateId" asp-items="@Model.StatesSelectList" class="form-control"></select>
                            <span asp-validation-for="@Model.OctopusModel.StateId" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @*Precio*@
                            <label class="control-label"><strong>Precio ($)</strong></label>
                            <input asp-for="@Model.OctopusModel.Price" class="form-control" min="0" max="999999999" />
                            <span asp-validation-for="@Model.OctopusModel.Price" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            @*Condición*@
                            <label class="control-label"><strong>Condición</strong></label>
                            <input asp-for="@Model.OctopusModel.Condition" class="form-control" maxlength="49"></input>
                            <span asp-validation-for="@Model.OctopusModel.Condition" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @*Marca*@
                            <label class="control-label"><strong>Marca</strong></label>
                            <input asp-for="@Model.OctopusModel.Brand" class="form-control" maxlength="49"></input>
                            <span asp-validation-for="@Model.OctopusModel.Brand" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @*Modelo*@
                            <label class="control-label"><strong>Modelo</strong></label>
                            <input asp-for="@Model.OctopusModel.Model" class="form-control" maxlength="99"></input>
                            <span asp-validation-for="@Model.OctopusModel.Model" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <div class="form-group">
                            @*Composición*@
                            <label class="control-label"><strong>Composición</strong></label>
                            <textarea id="notes" asp-for="OctopusModel.Composition" class="form-control" rows="5" maxlength="2000"></textarea>
                            <span asp-validation-for="@Model.OctopusModel.Composition" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <div class="form-group">
                            @*Notas*@
                            <label class="control-label"><strong>Notas</strong></label>
                            <textarea id="notes" asp-for="OctopusModel.Notes" class="form-control" rows="5" maxlength="2000"></textarea>
                            <span asp-validation-for="@Model.OctopusModel.Notes" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <tr>
            <td colspan="2">
                <button type="submit" class="btn">Guardar</button>
            </td>
        </tr>
    </form>
    @section scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}